<a href="/">Home</a>
<a href="/student" style="color: black; font-weight:bold">Go to student list</a>
<div class="container mt-3 mb-3">
    <h1>Book List</h1>
<table border="1">
  <tr>
    <th colspan="7">Book List</th>
  </tr>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Date</th>
    <th>Image</th>
    <th>Video</th>
  </tr>
  {{#each books}}
    <tr>
      <th>{{title}}</th>
      <th>{{author}}</th>
      <th>{{price}}$</th>
      <th>{{quantity}}</th>
      <th>{{ dateFormat date "DD/MM/YYYY"}}</th>
      <th><img src="{{ image }}" width="100" height="100"></th>
      <th><iframe width="560" height="315" src="https://www.youtube.com/embed/{{ video }}" ></iframe></th>
    </tr>
  {{/each}}

</table>
</div>